<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardCornerRadius="15dp"
    app:cardMaxElevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="5dp">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/food1"
        android:id="@+id/foodimage"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Makanan : "
        android:id="@+id/txtnamamakanan"
        android:layout_toRightOf="@id/foodimage"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        />
    <TextView
        android:id="@+id/txtjudulket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtnamamakanan"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/foodimage"
        android:text="Ket : "
        android:textColor="@color/green"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtjudulket"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/foodimage"
        android:text="Judul Ket"
        android:textColor="@color/green"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txthargamakanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtket"
        android:layout_marginStart="150dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/foodimage"
        android:text="Harga Makanan : "
        android:textColor="@color/green"
        android:textStyle="bold" />
</RelativeLayout>
</androidx.cardview.widget.CardView>